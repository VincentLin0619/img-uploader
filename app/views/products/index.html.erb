<button>
  <%= link_to "newProduct", new_product_path, class: "link" %>
</button>
<% @products.each do |p| %>
<ul>
  <li><%= p.title %></li>
  <li><%= p.description %></li>
  <li>
    <button> <%= link_to "edit", edit_product_path(p), class: "link" %></button>
    <%= button_to "delete", product_path(p), method: "delete", class: "link" %>
  </li>
</ul>
  <% end %>
